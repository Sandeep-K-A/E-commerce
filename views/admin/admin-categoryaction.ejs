<section class="content-main mt-80 mb-80">
    <div class="card mx-auto card-login">
        <div class="card-body">
            <h4 class="card-title mb-4">Edit Category</h4>
            <form action="/admin/editcategory" method="post">
                <div class="mb-3">
                    <input class="form-control" id="categoryname" name="categoryname" placeholder="" type="text" value="<%=category.name %>" >
                    <span id="emailError" style="color: red;font-size: 12px;margin-top: 5px;"></span>
                </div> 
                <input class="form-control" id="hiddenname" name="hiddenname" placeholder="" type="text" value="<%=category.name %>" hidden >
                
                <div class="mb-4">
                    <button type="submit" class="btn btn-primary w-100"> Edit </button>
                </div> 
            </form>
        </div>
        </div>
    </section>