<section class="content-main mt-80 mb-80 pt-100">
    <div class="card mx-auto card-login" style="width: 30rem;">
        <div class="card-body">
            <h4 class="card-title mb-4"></h4>
            <form action="/password-change" method="post">
                <div class="mb-3">
                    <input class="form-control mb-4" id="newPassword" placeholder="Enter new password" type="password" name="newPassword">
                    <input class="form-control" id="confirmNewPassword" placeholder="confirm new password" type="password" name="confirmNewPassword">
                </div> <!-- form-group// -->
                <div class="mb-4">
                    <button type="submit" class="btn btn-primary w-100">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</section>