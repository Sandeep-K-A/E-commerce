                                            <a href="/shop"><%=item.ProductCategory %></a>
                                        </div>
                                        <h2><a href="/shop"><%=item.ProductTitle %></a></h2>
                                        <!-- <div class="rating-result" title="90%">
                                            <span>
                                                <span>90%</span>
                                            </span>
                                        </div> -->
                                        <h4><a href="/shop"><%=item.ProductDescription %></a></h4>
                                        <div class="product-price">
                                            <span>Rs<%=item.ProductPricing %> </span>
                                            <!-- <span class="old-price">$245.8</span> -->
                                        </div>
                                        <div class="product-action-1 show">
                                            <% if(item.ProductQuantity <= 0){%>
                                                <span style="color: red;font-size: 12px;">Out of Stock</span>
                                            <%}else{%>
                                                <button aria-label="Add To Cart" class="action-btn hover-up" onclick="addToCart('<%=item._id%>')"><i class="fi-rs-shopping-bag-add"></i></button>
                                            <%} %>
                                        </div>
                                    </div>
                               
                                </div>
                            </div>
                        <%}) %>

