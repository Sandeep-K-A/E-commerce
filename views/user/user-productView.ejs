                                        <img src="/images/products_image/<%=product.ProductImages[1]%>"
                                            alt="product image">
                                    </figure>
                                    <figure class="border-radius-10">
                                        <img src="/images/products_image/<%=product.ProductImages[2]%>"
                                            alt="product image">
                                    </figure>
                                    <figure class="border-radius-10">
                                        <img src="/images/products_image/<%=product.ProductImages[3]%>"
                                            alt="product image">
                                    </figure>
                                    <figure class="border-radius-10">
                                        <img src="assets/imgs/shop/product-16-5.jpg" alt="product image">
                                    </figure>
                                    <figure class="border-radius-10">
                                        <img src="assets/imgs/shop/product-16-6.jpg" alt="product image">
                                    </figure>
                                    <figure class="border-radius-10">
                                        <img src="assets/imgs/shop/product-16-7.jpg" alt="product image">
                                    </figure>
                                </div>
                                <!-- THUMBNAILS -->
                                <div class="slider-nav-thumbnails pl-15 pr-15">
                                    <div><img src="/images/products_image/<%=product.ProductImages[0]%>"
                                            alt="product image"></div>
                                    <div><img src="/images/products_image/<%=product.ProductImages[1]%>"
                                            alt="product image"></div>
                                    <div><img src="/images/products_image/<%=product.ProductImages[2]%>"
